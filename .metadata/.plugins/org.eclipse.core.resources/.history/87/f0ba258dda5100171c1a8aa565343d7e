#定义一个类
class Dog:
    #狗在叫
    def __init__(self,newWeight):
        self.weight=newWeight
    def dark(self):
        print('1111……')
    def run(self):
        print('跑……')
    def eat(self):
        print('吃……')
        #在方法中可以对属性进行修改
        self.weight+=5
#创建一只狗
xiaogou=Dog(1)
#调用狗这个对象的一个方法
xiaogou.dark()
xiaogou.run()
#添加属性（一般指的是对像的特点，区别于其它对像的特有东西）
xiaogou.color='黄颜色'
print(xiaogou.weight)
print(xiaogou.color)
print(xiaogou.eat)
print(xiaogou.weight)
#直接修改属性。
xiaogou.weight+=5
print(xiaogou.weight)

Bigdog=Dog(6)
print(Bigdog.weight)


