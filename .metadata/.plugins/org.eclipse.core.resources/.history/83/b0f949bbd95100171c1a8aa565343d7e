#定义一个类
class Dog:
    #狗在叫
    def __init__(self,newWeight):
        self.weight=newWeight
    def dark(self):
        print('1111……')
    def run(self):
        print('跑……')
    def eat(self):
        print('吃……')
        #在方法中可以对属性进行修改
        self.weight+=5

Bigdog=Dog(6)
print(Bigdog.weight)


